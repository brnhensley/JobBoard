@using JobBoard.Models;

<h1>Job Openings</h1>
<ul>

@if (Model.Count == 0)
{
 <p>You have no list items</p>
}
@if(Model.Count != 0)
{
 @foreach (JobOpening job in Model)
 {
   <li>@job.GetTitle(), @job.GetDescription(), @job.GetPhone()</li>
 }
}

</ul>
<a href="/jobopenings/new">Add a job opening.</a>
